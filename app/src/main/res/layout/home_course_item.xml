<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_course_list_icon"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:paddingTop="10dp"
                android:src="@drawable/course_dummy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight=".9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_course_list_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="2"

                        android:gravity="center"
                        android:text="course name"
                        android:textColor="#515151"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@android:drawable/button_onoff_indicator_off" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/tv_list_course_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"

                                android:gravity="center"
                                android:text="Hourse"
                                android:textColor="#515151"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_list_course_h"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"

                                android:gravity="center"
                                android:text="H"
                                android:textColor="#515151"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:adjustViewBounds="true"
                            android:alpha=".5"
                            android:scaleType="fitXY"

                            android:src="@android:drawable/button_onoff_indicator_on" />


                        <TextView
                            android:id="@+id/tv_list_course_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Cost"
                            android:textColor="#515151"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tv_list_course_le"
                            android:layout_width="34dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="LE"
                            android:textColor="#515151"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
